<% include ../partials/header %>

<div class="row">
    <h1 class="yc-form-header">Add New Comment to <%= campground.name %></h1>
    <div class="yc-form-container">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <input class="btn btn-primary btn-lg btn-block" type="submit">
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>