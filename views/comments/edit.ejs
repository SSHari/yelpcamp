<% include ../partials/header %>

<div class="row">
    <h1 class="yc-form-header">Edit Comment</h1>
    <div class="yc-form-container">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <input class="btn btn-primary btn-lg btn-block" type="submit">
            </div>
        </form>
        <a href="/campgrounds/<%= campground_id %>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>